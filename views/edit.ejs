<% include ./partials/header %>

<div class="ui main text segment container">
    <div class="ui huge header">Edit Movie</div>
    <form class="ui form" action="/movies/<%= movie._id %>?_method=PUT" method="POST">
        <div class ="field"><input type="text" name="movie[title]" value="<%= movie.title %>"></div>
        <div class ="field"><input type="text" name="movie[image]" value="<%= movie.image %>"></div>
        <div class ="field"><input type="text" name="movie[year]" value="<%= movie.year %>"></div>
        <div class ="field"><textarea name="movie[description]"> <%= movie.description %> </textarea></div>
        <input type="submit" class="ui big basic blue button">
    </form>
</div>

